<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ErrorbarStyle">
        <attr name="errorbarStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="ErrorbarLayout">
        <attr name="android:src" />
        <attr name="android:background" />

        <attr name="android:textAppearance" />
        <attr name="android:textColor" />
        <attr name="android:textSize" />

        <attr name="actionTextAppearance" format="reference" />
        <attr name="actionTextColor" format="color" />
        <attr name="actionTextSize" format="dimension" />

        <!-- inherited from SnackbarLayout -->
        <attr name="elevation" />
    </declare-styleable>
</resources>